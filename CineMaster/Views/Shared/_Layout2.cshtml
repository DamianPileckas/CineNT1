<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Pochocleando", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Compra", "Compra", "Home")</li>
                </ul>
                <ul class="nav navbar-right" style="text-decoration:none">
                    <li style="float:left;">@Html.ActionLink("Registro", "Registro", "Home", null, new { @style = "text-decoration:none; color:#9d9d9d; padding-top: 15px; padding-bottom: 15px;" })</li>
                    <li style="float:left;">@Html.ActionLink("Login OFF ", "LoginOFF", "Home", null, new { @style = "text-decoration:none; color:#9d9d9d; padding-top: 15px; padding-bottom: 15px;" })</li>
                </ul>
            </div>
            
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <br />
        <div id="footer">
            <footer class="footer-area section-padding-100-0">
                <div class="container-fluid">
                    <div class="row">
                        <!-- Footer Widget Area -->
                        <div class="col-12 col-md-4 col-xl-2">
                            <div class="footer-widget-area mb-100">
                                <div class="widget-title">
                                    <p style="text-align:center; color:black;">@Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "h2", @Style = "text-decoration:none;" })</p>
                                </div>
                            </div>
                        </div>

                        <!-- Footer Widget Area -->
                        <div class="col-12 col-md-4 col-xl-2">
                            <div class="footer-widget-area mb-100">
                                <div class="widget-title">
                                    <p style="text-align:center; color:black;">@Html.ActionLink("Registro", "Registro", "Home", null, new { @class = "h2", @Style = "text-decoration:none;" })</p>
                                </div>
                            </div>
                        </div>

                        <!-- Footer Widget Area -->
                        <div class="col-12 col-md-4 col-xl-2">
                            <div class="footer-widget-area mb-100">
                                <div class="widget-title">
                                    <p style="text-align:center; color:black;">@Html.ActionLink("Contacto", "Contact", "Home", null, new { @class = "h2", @Style = "text-decoration:none;" })</p>
                                </div>

                            </div>
                        </div>

                        <!-- Footer Widget Area -->
                    </div>
                </div>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
